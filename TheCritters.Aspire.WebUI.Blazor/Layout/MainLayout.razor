@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Critters Management
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Critters App</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavGroup Title="Critters" Icon="@Icons.Material.Filled.Pets" Expanded="true">
                <MudNavLink Href="critters" Icon="@Icons.Material.Filled.Pets">Critters</MudNavLink>
                <MudNavLink Href="assign-guild" Icon="@Icons.Material.Filled.Add">Join</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Guilds" Icon="@Icons.Material.Filled.Groups" Expanded="true">
                <MudNavLink Href="guilds" Icon="@Icons.Material.Filled.ManageAccounts">Manage</MudNavLink>
                <MudNavLink Href="guild-lodge-access" Icon="@Icons.Material.Filled.Subscriptions">Subscribe</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="lodges" Icon="@Icons.Material.Filled.House">Lodges</MudNavLink>
            <MudNavLink Href="families" Icon="@Icons.Material.Filled.FiberSmartRecord">Families</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}